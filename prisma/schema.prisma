// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Exam {
  id              Int          @id @default(autoincrement())
  examId          Int          @unique
  name            String       @unique
  numberQuestions Int
  requiredCorrect Int
  subelements     Subelement[]
}

model Question {
  id           Int       @id @default(autoincrement())
  questionId   String    @unique
  questionText String
  subelement   String
  group        String
  choices      Choice[]
  Answers      Answers[]
}

model Choice {
  id         Int       @id @default(autoincrement())
  questionId String
  text       String
  Question   Question  @relation(fields: [questionId], references: [questionId])
  Answers    Answers[]
}

model Answers {
  id         Int      @id @default(autoincrement())
  Question   Question @relation(fields: [questionId], references: [id])
  Choice     Choice   @relation(fields: [choiceId], references: [id])
  questionId Int
  choiceId   Int
}

model Group {
  id           Int        @id @default(autoincrement())
  groupId      String     @unique
  description  String
  subelement   Subelement @relation(fields: [subelementId], references: [subelementId])
  subelementId String
}

model Subelement {
  id                Int     @id @default(autoincrement())
  subelementId      String  @unique
  name              String
  numExamQuestions  Int
  numGroups         Int
  numTotalQuestions Int
  groups            Group[]
  exam              Exam    @relation(fields: [examId], references: [examId])
  examId            Int     @default(1)
}
