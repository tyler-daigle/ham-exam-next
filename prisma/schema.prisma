// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Exam {
  id              Int          @id @default(autoincrement())
  examId          Int          @unique
  name            String       @unique
  numberQuestions Int
  requiredCorrect Int
  subelements     Subelement[]
}

model Question {
  id            Int      @id @default(autoincrement())
  questionId    String   @unique
  questionText  String
  subelement    String
  group         String
  choices       Choice[] @relation("choices")
  correctAnswer Choice   @relation(fields: [choiceId], references: [id])
  choiceId      Int
}

model Choice {
  id         Int      @id @default(autoincrement())
  question   Question @relation("choices", fields: [questionId], references: [questionId])
  questionId String

  Question Question[]
}

model Group {
  id           Int        @id @default(autoincrement())
  groupId      String     @unique
  description  String
  subelement   Subelement @relation(fields: [subelementId], references: [subelementId])
  subelementId String
}

model Subelement {
  id                Int     @id @default(autoincrement())
  subelementId      String  @unique
  name              String
  numExamQuestions  Int
  numGroups         Int
  numTotalQuestions Int
  groups            Group[]
  exam              Exam    @relation(fields: [examId], references: [examId])
  examId            Int     @default(1)
}
