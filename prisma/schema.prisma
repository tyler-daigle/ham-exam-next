// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Exam {
  id              Int             @id @default(autoincrement())
  examId          Int             @unique
  name            String          @unique
  numberQuestions Int
  requiredCorrect Int
  subelements     Subelement[]
  GeneratedExam   GeneratedExam[]
}

model Question {
  id            Int            @id @default(autoincrement())
  questionId    String         @unique
  questionText  String
  subelement    String
  group         String
  correctAnswer Int            @default(1)
  choices       Choice[]
  QuestionList  QuestionList[]
}

model Choice {
  id          Int       @id @default(autoincrement())
  answerIndex Int       @default(1)
  text        String
  Question    Question? @relation(fields: [questionId], references: [id])
  questionId  Int?
}

model Group {
  id           Int        @id @default(autoincrement())
  groupId      String     @unique
  description  String
  subelement   Subelement @relation(fields: [subelementId], references: [subelementId])
  subelementId String
}

model Subelement {
  id                Int     @id @default(autoincrement())
  subelementId      String  @unique
  name              String
  numExamQuestions  Int
  numGroups         Int
  numTotalQuestions Int
  groups            Group[]
  exam              Exam    @relation(fields: [examId], references: [examId])
  examId            Int     @default(1)
}

model GeneratedExam {
  id           Int            @id @default(autoincrement())
  exam         Exam           @relation(fields: [examId], references: [examId])
  examId       Int            @default(1)
  QuestionList QuestionList[]
}

model QuestionList {
  id              Int           @id @default(autoincrement())
  generatedExam   GeneratedExam @relation(fields: [generatedExamId], references: [id])
  generatedExamId Int

  question   Question @relation(fields: [questionId], references: [questionId])
  questionId String
}
